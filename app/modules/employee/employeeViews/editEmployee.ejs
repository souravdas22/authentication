<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- External CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <!-- Bootstap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Product CRUD App</title>
  </head>
  <body>
    <!-- ***** Header Area Start ***** -->
    <%- include("header") %>
    <!-- ***** Header Area End ***** -->
    <main class="body-content">
      <div class="container mt-5 form-container">
        <h2>Edit Product</h2>
        <form
          action="/api/update-product/<%= data._id %>"
          method="post"
          method="post"
          enctype="multipart/form-data"
        >
          <!-- Product Name -->
          <div class="form-group">
            <label for="productName">Name:</label>
            <input
              type="text"
              class="form-control"
              id="productName"
              placeholder="Enter product name"
              required
              name="name"
              value="<%=data.name%>"
            />
          </div>

          <!-- Product Price -->
          <div class="form-group">
            <label for="productPrice">Price:</label>
            <input
              type="number"
              class="form-control"
              id="productPrice"
              placeholder="Enter product price"
              required
              name="price"
              value="<%=data.price%>"
            />
          </div>

          <!-- Product Size -->
          <div class="form-group">
            <label for="productSize">Size:</label>
            <div class="checkBox mb-2 p-2">
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="sS"
                name="size" value="S" <%= data.size.includes('S') ? 'checked' :
                '' %> />
                <label class="form-check-label" for="sS">S</label>
              </div>
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="sM"
                name="size" value="M" <%= data.size.includes('M') ? 'checked' :
                '' %> />
                <label class="form-check-label" for="sM">M</label>
              </div>
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="sL"
                name="size" value="L" <%= data.size.includes('L') ? 'checked' :
                '' %> />
                <label class="form-check-label" for="sL">L</label>
              </div>
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="sXL"
                name="size" value="XL" <%= data.size.includes('XL') ? 'checked'
                : '' %> />
                <label class="form-check-label" for="sXL">XL</label>
              </div>
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="sXXL"
                name="size" value="XXL" <%= data.size.includes('XXL') ?
                'checked' : '' %> />
                <label class="form-check-label" for="sXXL">XXL</label>
              </div>
            </div>
          </div>

          <!-- Product Color -->
          <div class="form-group form-check-inline">
            <label for="productColor">Color:</label>
            <div class="checkBox mb-2 p-2">
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="redColor"
                name="color" value="Red" <%= data.color.includes('Red') ?
                'checked' : '' %> />
                <label class="form-check-label" for="redColor">Red</label>
              </div>
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="greenColor"
                name="color" value="Green" <%= data.color.includes('Green') ?
                'checked' : '' %> />
                <label class="form-check-label" for="greenColor">Green</label>
              </div>
              <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="blueColor"
                name="color" value="Blue" <%= data.color.includes('Blue') ?
                'checked' : '' %> />
                <label class="form-check-label" for="blueColor">Blue</label>
              </div>
            </div>
          </div>

          <!-- Product image -->
          <div class="form-group">
            <label for="productImage">Select image:</label>
            <input
              type="file"
              class="form-control"
              id="productImage"
              name="image"
              accept="image/*"
            />
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </main>
    <!-- ***** Footer Area Start ***** -->
    <%- include("footer") %>
    <!-- ***** Footer Area End ***** -->

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
