<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- External CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Bootstap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Product CRUD App</title>
  </head>
  <body>
    <!-- ***** Header Area Start ***** -->
    <%- include("header") %>
    <!-- ***** Header Area End ***** -->
    <main class="body-content">
      <div class="container mt-4 body-content">
        <h2 class="text-center mb-4">Product Table</h2>
        <div class="mb-3 d-flex justify-content-between">
          <a href="/create-product" class="btn btn-primary">Add Product</a>
          <!-- Filter Button -->
          <div class="btn-group">
            <button
              type="button"
              class="btn btn-info dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              FilteBySize
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/filter-product?size=All"
                  >All Products</a
                >
              </li>
              <% sizes.forEach((size) => { %>
              <li>
                <a class="dropdown-item" href="/filter-product?size=<%= size %>"
                  ><%= size %></a
                >
              </li>
              <% }); %>
            </ul>
          </div>
        </div>
        <% if (products.length===0) { %>
        <h2 class="text-center">No records found</h2>
        <% } else { %>
        <table
          class="table table-sm table-striped table-bordered text-center mb-5"
        >
          <thead>
            <tr>
              <th>Sl.No</th>
              <th>Name</th>
              <th>Price</th>
              <th>Size</th>
              <th>Color</th>
              <th>Image</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product,i) => { %>

            <tr>
              <td><%= i+1 %></td>
              <td><%= product.name %></td>
              <td><span>â‚¹</span> <%= product.price %></td>
              <td><%= product.size %></td>
              <td><%= product.color %></td>
              <td>
                <img
                  src="/uploads/<%= image[i] %>"
                  alt="prodcutImg"
                  class="img-thumbnail"
                  style="height: 50px; width: 50px"
                />
              </td>
              <td>
                <button class="btn btn-warning">
                  <a
                    style="text-decoration: none; color: black"
                    href="/edit-product/<%= product._id %>"
                    >Edit</a
                  >
                </button>
                <button
                  class="btn btn-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteModal"
                  data-id="<%= product._id %>"
                >
                  Delete
                </button>
              </td>
            </tr>
            %> <% }); %>
          </tbody>
        </table>
        <% } %>
      </div>
    </main>

    <!-- Delete Modal -->
    <div
      class="modal fade"
      id="deleteModal"
      tabindex="-1"
      aria-labelledby="deleteModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Delete Product</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this product?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <form id="deleteForm" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- ***** Footer Area Start ***** -->
    <%- include("footer") %>
    <!-- ***** Footer Area End ***** -->

    <!-- Delete Modal Script -->
    <script>
      const deleteModal = document.getElementById("deleteModal");
      deleteModal.addEventListener("show.bs.modal", (event) => {
        const button = event.relatedTarget;
        const productId = button.getAttribute("data-id");
        const form = deleteModal.querySelector("#deleteForm");
        form.setAttribute("action", `/api/delete-product/${productId}`);
      });
    </script>

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <!-- <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script> -->
  </body>
</html>
