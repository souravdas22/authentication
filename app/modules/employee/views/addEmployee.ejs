<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- External CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <!-- Bootstap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .container {
        padding: 50px;
      }
    </style>
    <title>Employee CRUD App</title>
  </head>
  <body>
    <!-- ***** Header Area Start ***** -->
    <%- include("header") %>
    <!-- ***** Header Area End ***** -->
    <main class="body-content">
      <div class="container p-5 form-container">
        <h2 class="text-center">Create Employee</h2>
        <form action="/create-employee" method="post" class="col-5 mx-auto">
          <!-- employee Name -->
          <div class="form-group">
            <label for="employeeFirstName">First Name:</label>
            <input
              type="text"
              class="form-control"
              id="employeeFirstName"
              name="first_name"
              placeholder="Enter employee first name"
              required
            />
          </div>
          <!-- employee last name  -->
          <div class="form-group">
            <label for="employeeLastName">Last Name:</label>
            <input
              type="text"
              class="form-control"
              id="employeeLastName"
              name="last_name"
              placeholder="Enter employee last name"
              required
            />
          </div>
          <!-- employee Email -->
          <div class="form-group">
            <label for="employeeEmail">Email:</label>
            <input
              type="email"
              class="form-control"
              id="employeeEmail"
              name="email"
              placeholder="Enter email"
              required
            />
          </div>
          <!-- employee Phone -->
          <div class="form-group">
            <label for="employeePhone">Phone:</label>
            <input
              type="text"
              class="form-control"
              id="employeePhone"
              name="phone"
              placeholder="Enter phone"
              required
            />
          </div>
          <!-- employee Designation -->
          <div class="form-group">
            <label for="employeeDesignation">Designation:</label>
            <input
              type="text"
              class="form-control"
              id="employeeDesignation"
              name="designation"
              placeholder="Enter designation"
              required
            />
          </div>

          <br />

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary my-3">Submit</button>
          </div>
        </form>
      </div>
    </main>
    <!-- ***** Footer Area Start ***** -->
    <%- include("footer") %>
    <!-- ***** Footer Area End ***** -->

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
